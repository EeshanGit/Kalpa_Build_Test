<!-- JavaScript for Mobile Menu Toggle -->
<script>
  function setupMenuToggle() {
    const menuToggle = document.getElementById("menu-toggle");
    const menuClose = document.getElementById("menu-close");
    const mobileMenu = document.getElementById("mobile-menu");

    if (menuToggle && menuClose && mobileMenu) {
      menuToggle.onclick = function () {
        mobileMenu.classList.toggle("hidden");
        menuToggle.classList.toggle("hidden"); // Hide button when menu opens
      };

      menuClose.onclick = function () {
        mobileMenu.classList.toggle("hidden");
        menuToggle.classList.toggle("hidden"); // Show button again when menu closes
      };
    }
  }

  document.addEventListener("DOMContentLoaded", setupMenuToggle);
  document.addEventListener("astro:after-swap", setupMenuToggle);
</script>

