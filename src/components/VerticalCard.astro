---
const { title, img, url, badge } = Astro.props;
---

<a href={url} class="block max-w-xs mx-auto rounded-2xl overflow-hidden shadow-lg transition-transform hover:scale-[1.02] bg-white">
  <img src={img} alt={title} class="w-full h-auto object-cover" />
  <div class="p-4 text-center">
    <h2 class="text-lg font-semibold">{title}</h2>
    {badge && (
      <span class="inline-block mt-2 bg-purple-200 text-purple-800 text-xs font-medium px-2 py-1 rounded-full">
        {badge}
      </span>
    )}
  </div>
</a>
